<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAFAFA">

    <!-- Common Label Width -->

    <!-- Row 1: Artikel-Nr -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Artikel-Nr"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"/>

        <EditText
            android:id="@+id/inputField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="Artikel einscannen"
            android:textColor="#000000"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textSize="18sp"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <!-- Row 2: Artikelname -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Benennung"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"/>

        <EditText
            android:id="@+id/nameField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textNoSuggestions"
            android:singleLine="false"
            android:maxLines="3"
            android:minHeight="50dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#444444"
            android:focusable="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:clickable="false"/>
    </LinearLayout>

    <!-- Row 5: Mengeneinheit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Einheit"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"/>

        <EditText
            android:id="@+id/meField"
            android:inputType="textNoSuggestions"
            android:importantForAutofill="no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#444444"
            android:focusable="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:clickable="false"/>
    </LinearLayout>

    <!-- Row 3: Lager -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="von"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"/>

        <EditText
            android:id="@+id/lagerField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#444444"
            android:focusable="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:clickable="false"/>
    </LinearLayout>

    <!-- Row 4: Bestand -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="nach"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"/>

        <EditText
            android:id="@+id/bestandField"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#444444"
            android:focusable="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:clickable="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Menge"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"/>

        <EditText
            android:id="@+id/menge"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#444444"
            android:focusable="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:clickable="false"/>
    </LinearLayout>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neueingabe"
        android:backgroundTint="#1E90FF"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:padding="16dp"/>

    <!--
    <Button
        android:id="@+id/umbuchenButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umbuchen"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="16dp"/>
    !-->

</LinearLayout>
