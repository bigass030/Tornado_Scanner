<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Row 1: Artikel-Nr + Einheit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="Artikel-Nr"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/inputField"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="72dp"
                    android:hint="Artikel einscannen"
                    android:textColor="#000000"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:imeOptions="actionDone"/>

                <EditText
                    android:id="@+id/meField"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="72dp"
                    android:layout_marginStart="12dp"
                    android:background="#EEEEEE"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:textColor="#444444"
                    android:gravity="center"
                    android:inputType="textNoSuggestions"
                    android:importantForAutofill="no"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:clickable="false"/>
            </LinearLayout>

            <!-- Row 2: Benennung -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="Benennung"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="72dp"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:singleLine="false"
                    android:maxLines="3"
                    android:background="#EEEEEE"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:textColor="#444444"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:clickable="false"/>
            </LinearLayout>

            <!-- Row 3: von (Spinner dropdown) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="von"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <Spinner
                    android:id="@+id/lagerSpinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:popupBackground="#EEF7FF" />

            </LinearLayout>

            <!-- Row 4: nach -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="nach"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/bestandField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="@android:drawable/editbox_background"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:importantForAutofill="no"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"/>
            </LinearLayout>

            <!-- Row 5: Menge (numeric) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="28dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="Menge"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/menge"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="@android:drawable/editbox_background"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:importantForAutofill="no"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"/>
            </LinearLayout>

            <Button
                android:id="@+id/clearButton"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="Neueingabe"
                android:backgroundTint="#1E90FF"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
