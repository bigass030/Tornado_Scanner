<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Row 1: Artikel-Nr with INSIDE undo button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="Artikel-Nr"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <!-- Container so icon can sit inside the field -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp">

                    <EditText
                        android:id="@+id/inputField"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Artikel einscannen"
                        android:textColor="#000000"
                        android:background="@android:drawable/editbox_background"
                        android:inputType="text"
                        android:importantForAutofill="no"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingEnd="56dp"
                        android:textSize="20sp"
                        android:imeOptions="actionDone"/>

                    <!-- Undo/Clear icon INSIDE the EditText area -->
                    <ImageButton
                        android:id="@+id/clearIconButton"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_icon_button"
                        android:contentDescription="Neueingabe"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_undo"
                        android:padding="8dp"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Row 2: Benennung -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="Benennung"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="72dp"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:singleLine="false"
                    android:maxLines="3"
                    android:background="#EEEEEE"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:textColor="#444444"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:clickable="false"/>
            </LinearLayout>

            <!-- Row 3: Einheit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="Einheit"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/meField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="#EEEEEE"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:textColor="#444444"
                    android:gravity="center_vertical"
                    android:inputType="textNoSuggestions"
                    android:importantForAutofill="no"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:clickable="false"/>
            </LinearLayout>

            <!-- Row 4: von -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="von"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <Spinner
                    android:id="@+id/lagerSpinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:popupBackground="#BFE3FF" />
            </LinearLayout>

            <!-- Row 5: nach -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="nach"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/bestandField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    android:background="@android:drawable/editbox_background"
                    android:padding="16dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:importantForAutofill="no"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"/>
            </LinearLayout>

            <!-- Row 6: Menge -->
            <!-- Row 6: Menge (numeric) with play button INSIDE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:text="Menge"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="72dp">

                    <EditText
                        android:id="@+id/menge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:drawable/editbox_background"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingEnd="56dp"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:importantForAutofill="no"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone"/>

                    <ImageButton
                        android:id="@+id/playButton"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_icon_button"
                        android:contentDescription="Umbuchung"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_play"
                        android:padding="8dp"/>
                </FrameLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
